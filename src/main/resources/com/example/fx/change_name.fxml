<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10" prefHeight="200.0" prefWidth="400.0"  fx:controller="com.example.fx.NameController">
    <!-- Строка ввода текста -->
    <TextField fx:id="inputTextField" promptText="Введите текст"/>

    <!-- Кнопка "Редактирование" -->
    <Button fx:id="editButton" text="Редактирование" onAction="#changeNameMethod"/>

    <!-- Строка с отредактированным текстом -->
    <Label fx:id="editedTextLabel" />
</VBox>